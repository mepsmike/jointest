<div class="subject-detail-wrapper">
  <div class="subjects-container">
    <div class="navigation-option">
      <%= link_to '< Back To List', subjects_path, class: 'back-to-list waves-effect waves-light btn left' %>
    </div>

    <div class="subject-info-banner">
      <div class="picture-cover">
        <%= image_tag 'subject-detail-banner.jpg', class: 'responsive-img' %>
      </div>
      <div class="info-detail">
        <h3>Groningen</h3>

        <div class="points-info">
          <span>單標點數：</span><span> <%= rand(1..50) %> 點</span>
        </div>

        <div class="product-link">
          <a href="#">商品來源連結</a>
        </div>

        <div class="progress-info-wrapper">
          <span>標案進度：</span>
          <div class="progress">
            <% progress = rand(5..100) %>
            <div class="determinate" style="width: <%= progress %>%"></div>
          </div>
          <span class="progress-value">
            <%= progress %>%
          </span>
        </div>

        <span>截標時間：</span>
        <div class="time-info-wrapper">
          <div class="hour">
            <span class='value'><%= rand(0..23).to_s.rjust(2, '0') %></span>
            <span class="unit">hr</span>
          </div>
          <div class="minute">
            <span class='value'><%= rand(0..59).to_s.rjust(2, '0') %></span>
            <span class="unit">min</span>
          </div>
          <div class="second">
            <span class='value'><%= rand(0..59).to_s.rjust(2, '0') %></span>
            <span class="unit">sec</span>
          </div>
        </div>

        <form action="#">
          <div class="input-field col s6">
            <input placeholder="" id="first_name" type="number" class="validate">
            <label for="first_name">下標點數</label>
          </div>
          <button type="submit" class="btn">下標</button>
        </form>
      </div>
    </div>
  </div>
